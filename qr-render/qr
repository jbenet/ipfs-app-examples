<body>

<center>
<h1>qr code render</h1>
<h3>enter text in the field below</h3>

<img id="qrcode"></img>
<br /><br /><br />
<input id="input" value="" />

</center>

<script>
function render(text) {
  qr.image({
    image: document.getElementById("qrcode"),
    level: "Q",
    size: 8,
    value: text,
  });
}

var tf = $('#input');
tf.bind('keyup keypress blur change cut copy paste', function(event) {
  render(tf.val())
})

var hash = window.location.hash.substring(1);
if (hash.length > 0) {
  tf.val(hash)
  render(hash)
} else {
  tf.val("enter text here")
  render("enter text here")
}
</script>
